<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

		<welcome-file-list>
			<welcome-file>index.html</welcome-file>
		</welcome-file-list>


    <servlet>
        <servlet-name>RestrictedAreaServlet</servlet-name>
        <servlet-class>com.marius.komgikk.servlet.RestrictedAreaServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RestrictedAreaServlet</servlet-name>
        <url-pattern>/restricted</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OpenServlet</servlet-name>
        <servlet-class>com.marius.komgikk.servlet.OpenServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OpenServlet</servlet-name>
        <url-pattern>/open</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>restricted</web-resource-name>
            <url-pattern>/restricted</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>
